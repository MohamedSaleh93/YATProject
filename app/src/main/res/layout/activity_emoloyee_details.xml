<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/employeeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_top"/>

    <TextView
        android:id="@+id/employeeNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mohamed Saleh"
        style="@style/CustomEmployeeTextView"/>

    <TextView
        android:id="@+id/employeePositionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Manager"
        style="@style/CustomEmployeeTextView"/>

    <TextView
        android:id="@+id/employeeAgeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        style="@style/CustomEmployeeTextView"/>

    <TextView
        android:id="@+id/employeePhoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0192934835"
        style="@style/CustomEmployeeTextView"/>

    <TextView
        android:id="@+id/employeeSalaryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000"
        style="@style/CustomEmployeeTextView"/>



</LinearLayout>